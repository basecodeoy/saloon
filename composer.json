{
    "name": "basecodeoy/saloon",
    "description": "A collection of building blocks for Saloon clients.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "intl"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/saloon",
    "support": {
        "issues": "https://github.com/basecodeoy/saloon/issues",
        "source": "https://github.com/basecodeoy/saloon",
        "security": "https://github.com/basecodeoy/saloon/blob/main/.github/SECURITY.md"
    },
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "basecodeoy/datobs": "^1.0",
        "basecodeoy/support": "^1.0",
        "illuminate/contracts": "^11.0",
        "illuminate/support": "^11.0",
        "laminas/laminas-soap": "^2.14",
        "nesbot/carbon": "^3.8.2",
        "saloonphp/cache-plugin": "^3.0",
        "saloonphp/laravel-plugin": "^3.5",
        "saloonphp/pagination-plugin": "^2.2",
        "saloonphp/rate-limit-plugin": "^2.0",
        "saloonphp/saloon": "^3.10.1",
        "saloonphp/xml-wrangler": "^1.3.1",
        "spatie/laravel-data": "^4.11.1"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.1.1"
    },
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Saloon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
